/**
 * âœ… FUNÃ‡ÃƒO GLOBAL: Todos os status ativos por padrÃ£o
 * Para excluir um status, comente a linha correspondente
 */
function obterStatusParaBusca() {
  return [
    // âœ… TODOS OS STATUS DESCOBERTOS NA API:
    // NOTA: Removido 'paid' pois duplica com status_id=4 (Pagamento aprovado)
    '1',    // Pedido realizado
    '2',    // Pedido prÃ©-autorizado
    '3',    // Aguardando pagamento
    '4',    // Pagamento aprovado
    '5',    // Produtos em separaÃ§Ã£o
    '6',    // Em transporte
    '7',    // Entregue
    //'8',    // Cancelado
    //'9',    // Pagamento nÃ£o aprovado
    '10',   // Faturado
    '11',   // ExceÃ§Ã£o de entrega
    '12',   // Pronto para envio
    '13',   // Pronto para retirada
    
    // ğŸ› ï¸ PARA EXCLUIR UM STATUS, COMENTE A LINHA:
    // Exemplo: para excluir cancelados e nÃ£o aprovados, descomente abaixo:
    // '8',    // Cancelado - EXCLUÃDO
    // '9',    // Pagamento nÃ£o aprovado - EXCLUÃDO
  ];
}

/**
 * âœ… APLICAR STATUS NOS PARÃ‚METROS DA API
 */
function aplicarStatusNosParametros(params) {
  const statusAtivos = obterStatusParaBusca();
  
  statusAtivos.forEach((statusId, index) => {
    params[`status_id[${index}]`] = statusId;
  });
  
  return params;
}